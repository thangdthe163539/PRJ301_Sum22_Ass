<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>CheckRole</filter-name>
        <filter-class>Filter.CheckRole</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CheckRole</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>DoctorController</servlet-name>
        <servlet-class>Controller.DoctorController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PatientController</servlet-name>
        <servlet-class>Controller.PatientController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>Controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminController</servlet-name>
        <servlet-class>Controller.AdminController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditPatientController</servlet-name>
        <servlet-class>Controller.EditPatientController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeletePatientController</servlet-name>
        <servlet-class>Controller.DeletePatientController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditDoctorController</servlet-name>
        <servlet-class>Controller.EditDoctorController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateDoctorController</servlet-name>
        <servlet-class>Controller.CreateDoctorController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomePageController</servlet-name>
        <servlet-class>Controller.HomePageController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeletaDoctorController</servlet-name>
        <servlet-class>Controller.DeletaDoctorController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreatePatientController</servlet-name>
        <servlet-class>Controller.CreatePatientController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RecordController</servlet-name>
        <servlet-class>Controller.RecordController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchController</servlet-name>
        <servlet-class>Controller.SearchController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DoctorController</servlet-name>
        <url-pattern>/doctor-page</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PatientController</servlet-name>
        <url-pattern>/patient-page</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/loginpage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminController</servlet-name>
        <url-pattern>/adminpage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditPatientController</servlet-name>
        <url-pattern>/editpatientpage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeletePatientController</servlet-name>
        <url-pattern>/deletepatient</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditDoctorController</servlet-name>
        <url-pattern>/editdoctorpage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateDoctorController</servlet-name>
        <url-pattern>/newdoctorpage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomePageController</servlet-name>
        <url-pattern>/homepage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeletaDoctorController</servlet-name>
        <url-pattern>/deletedoctor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreatePatientController</servlet-name>
        <url-pattern>/newpatientpage</url-pattern>
